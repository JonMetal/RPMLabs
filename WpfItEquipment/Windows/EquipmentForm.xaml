<Window x:Class="WpfItEquipment.Windows.EquipmentForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfItEquipment.Windows"
        mc:Ignorable="d"
        Title="EquipmentForm" Height="450" Width="800">
    <Grid>
        <Button x:Name="AddButton" Content="Add" HorizontalAlignment="Left" Margin="36,10,0,0" VerticalAlignment="Top" Width="50" Click="AddButton_Click"/>
        <Button x:Name="EditButton" Content="Edit" HorizontalAlignment="Left" Margin="36,35,0,0" VerticalAlignment="Top" Width="50" Height="21" Click="EditButton_Click"/>
        <DataGrid x:Name="MainDataGrid" d:ItemsSource="{d:SampleData ItemCount=1}" Margin="0,61,0,0"/>
    </Grid>
</Window>
