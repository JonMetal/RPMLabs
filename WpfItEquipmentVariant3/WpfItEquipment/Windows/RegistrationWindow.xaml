<Window x:Class="WpfItEquipment.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfItEquipment.Windows"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="250" Width="300">
    <Grid>
        <TextBox x:Name="textBoxLogin" HorizontalAlignment="Left" Margin="30,47,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxPassword" HorizontalAlignment="Left" Margin="30,70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name ="comboBoxRole" HorizontalAlignment="Left" Margin="30,101,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="155,43,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="155,66,0,0" VerticalAlignment="Top"/>
        <Label Content="Role" HorizontalAlignment="Left" Margin="156,99,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonAgree" Content="Agree" HorizontalAlignment="Left" Margin="30,154,0,0" VerticalAlignment="Top" Click="buttonAgree_Click"/>
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="110,154,0,0" VerticalAlignment="Top" Click="buttonCancel_Click"/>

    </Grid>
</Window>
